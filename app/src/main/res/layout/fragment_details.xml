<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.DetailsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="#FF6D00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFD600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <TextView
            android:id="@+id/txt_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="7dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="200dp"
            android:text="@string/Name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/poppins"/>

        <TextView
            android:id="@+id/txt_detail_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="7dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_detail_name"
            android:text="@string/EmailAddress"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/poppins"/>

        <TextView
            android:id="@+id/txt_detail_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="7dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_detail_email"
            android:text="@string/EmailAddress"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/poppins"/>

        <TextView
            android:id="@+id/txt_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="7dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_detail_phone"
            android:text=""
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/poppins"/>

        <TextView
            android:id="@+id/txt_suite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="7dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_street"
            android:text=""
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/poppins"/>

        <TextView
            android:id="@+id/txt_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="7dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_suite"
            android:text=""
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/poppins"/>

        <TextView
            android:id="@+id/txt_zipcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_city"
            android:text=""
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/poppins"/>

        <TextView
            android:id="@+id/txt_lat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_zipcode"
            android:text=""
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/poppins"/>

        <TextView
            android:id="@+id/txt_lng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_lat"
            android:text=""
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/poppins"/>


    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>